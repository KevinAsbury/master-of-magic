<?xml version="1.0" encoding="UTF-8"?>
<nifty>
  <screen id="start" controller="com.rafkind.masterofmagic.ui.OverworldMapScreenController">
    <layer id="layer" backgroundColor="#000F" childLayout="absolute">
      <panel
        height="40px"
        width="640px"
        align="center"
        valign="center"
        backgroundColor="#0F0F"
        childLayout="horizontal" 
        visibleToMouse="true"
        x="0"
        y="0">
          <text font="console.fnt" text="GAME" align="center" valign="center" />
          <text font="console.fnt" text="SPELLS" align="center" valign="center" />
          <text font="console.fnt" text="ARMIES" align="center" valign="center" />
          <text font="console.fnt" text="CITIES" align="center" valign="center" />
          <text font="console.fnt" text="MAGIC" align="center" valign="center" />
          <text font="console.fnt" text="INFO" align="center" valign="center" />
          <text font="console.fnt" text="PLANE" align="center" valign="center" /> 
      </panel>

      <panel
        height="440px"
        width="160px"
        align="center"
        valign="center"
        backgroundColor="#402F"
        childLayout="vertical" 
        visibleToMouse="true"
        x="480"
        y="40">
          <panel height="20%" width="90%" align="center" valign="top" backgroundColor="#550F"
            childLayout="center" visibleToMouse="true">
          </panel>
          <panel height="20%" width="90%" align="center" valign="top" backgroundColor="#505F"
            childLayout="center" visibleToMouse="true">
          </panel>
          <panel height="40%" width="90%" align="center" valign="top" backgroundColor="#050F"
            childLayout="center" visibleToMouse="true">
          </panel>
          <panel height="20%" width="90%" align="center" valign="top" backgroundColor="#005F"
            childLayout="center" visibleToMouse="true">
          </panel>
      </panel>
    </layer>
  </screen>
</nifty>
